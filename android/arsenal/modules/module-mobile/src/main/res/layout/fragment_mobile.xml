<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:cardBackgroundColor="@color/gold"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/default_image" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/default_emo_im_foot_in_mouth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="this is mobile module"
            android:textColor="@color/blue"
            android:textSize="24dp"
            android:textStyle="italic"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/buttonAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/default_emo_im_foot_in_mouth"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:minWidth="260dp"
            android:padding="10dp"
            android:text="module->android"
            android:textColor="#333"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage" />

        <Button
            android:id="@+id/buttonIos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/default_emo_im_happy"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:minWidth="260dp"
            android:padding="10dp"
            android:text="module->ios"
            android:textColor="#333"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage" />
    </LinearLayout>
</android.support.v7.widget.CardView>