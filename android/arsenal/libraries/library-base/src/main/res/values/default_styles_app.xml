<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Default.Theme.App.Normal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@color/textColorPrimary</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Default.Theme.App.FullScreen" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@color/textColorPrimary</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Default.Theme.App.Animation" parent="Default.Theme.App.Normal">
        <item name="android:windowAnimationStyle">@style/Default.Animation.Activity.Left_Right
        </item>
    </style>

    <style name="Default.Theme.App.None" parent="Default.Theme.App.Normal">
        <item name="android:windowAnimationStyle">@style/Default.Animation.Activity.None</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Default.Theme.App.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/Default.Theme.Widget.DrawerArrowToggle</item>
    </style>

    <!-- 状态栏改变颜色 -->
    <!-- 详见 README.md-->
    <style name="Default.Theme.App.Translucent.None" parent="Default.Theme.App.None" />

    <style name="Default.Theme.App.Translucent.Normal" parent="Default.Theme.App.Normal" />

    <style name="Default.Theme.App.Translucent.Animation" parent="Default.Theme.App.Animation" />

    <style name="Default.Theme.App.Translucent.ActionBar" parent="Default.Theme.App.ActionBar" />

    <style name="Default.Theme.App.Translucent.FullScreen" parent="Default.Theme.App.FullScreen" />
</resources>
