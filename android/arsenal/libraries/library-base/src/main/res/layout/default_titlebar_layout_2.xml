<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/left0BgView"
        android:layout_width="@dimen/default_titlebar_height"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/default_selector"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/left0Btn"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/default_menu_back_left_black"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left1BgView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/left0BgView"
        android:layout_toLeftOf="@+id/titleText"
        android:layout_toRightOf="@+id/left0BgView"
        android:layout_toStartOf="@+id/titleText"
        android:background="@drawable/default_selector"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/left1Btn"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/transparent"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/titleText"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/default_titlebar"
        android:textColor="@color/black"
        tools:ignore="NestedWeights" />

    <RelativeLayout
        android:id="@+id/right1BgView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/titleText"
        android:layout_toLeftOf="@+id/right0BgView"
        android:layout_toRightOf="@+id/titleText"
        android:layout_toStartOf="@+id/right0BgView"
        android:background="@drawable/default_selector"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/right1Btn"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right0BgView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/default_selector"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/right0Btn"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black" />
    </RelativeLayout>
</RelativeLayout>